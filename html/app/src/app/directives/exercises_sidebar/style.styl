.exercises-sidebar {
  position:fixed;

  .navbar-header {
    float: none;
  }

  .navbar .navbar-collapse {
    padding: 0;s
  }

  h3 {
    margin-left: 15px;
    margin-right: 10px;
    
    i {
      cursor: pointer;
    }
  }

  .fa {
    background-color: white;
    border-radius: 100%;
  }

  .list-group-item.active {
    background-color: #17607D;
    border-color: #17607D;
  }

  .side-item {
    height: 80px;
    border-radius: 0px;
    padding: 15px;

    h4 {
      display:inline;
    }

    p {
      float:right;
    }
  }

  .list-group {
      overflow-y: auto;
      max-height: 670px;
      overflow-x: hidden;
  }

  .no-exercises {
    text-align: center;
    
    h4 {
      border-top: 1px solid #888;
      margin: 0px
      padding: 35px;
    }
  }

  /* Landscape tablets and medium-to-large desktops */
  @media (min-width: 992px) {
    height: 100%;
    border-right: 2px solid #7D7D7D;
    width: inherit;

    .badge {
      width: 17px;
      height: 17px;
      padding: 2px 0 0 0;
      font-size: 10px;
      vertical-align: top;
      background-color: #F44336;
      border-radius: 100%;
      margin-top: -7px;
      margin-left: -7px;
    }
  }

  /* Portrait tablets and small desktops */
  /* Landscape phones and portrait tablets */
  /* Portrait phones and smaller */
  @media (max-width: 991px) {
    right: 0;
    left: 0;

    .collapse {
      display: none !important;
    }

    .collapse.in {
      display: block !important;
    }

    .navbar-toggle {
      display: block;
      margin-left: 20px;
    }
  }
}
