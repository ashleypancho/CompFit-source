@import url('https://fonts.googleapis.com/css?family=Oswald|Droid+Sans' rel='stylesheet' type='text/css')
@import 'root';
@import '../../app/controllers/**/style';
@import '../../app/directives/**/style';


html, body {
	width: 100%;
	height: 100%;
}

body {
	font-family: 'Droid Sans', sans-serif;
	margin-top: 50px;
	height: 90%;
	background-color: #EEE;

	/* Portrait tablets and small desktops */
    /* Landscape phones and portrait tablets */
    /* Portrait phones and smaller */
    @media (max-width: 991px) {
    	margin-top: 105px;
    }
}

h1, h2, h3, h4, h5, h6 {
	font-family: 'Oswald', sans-serif;
}

.pointer {
	cursor: pointer;
}

.container-fluid {
	padding-left: 0px;
	padding-right: 0px;
}

.topSection {
    min-height: 175px;
    height: initial;
    padding-bottom: 15px;
    background-color: white;
    overflow-x: hidden;
    border-bottom: 2px solid #888;
}

.bottomSection {
	padding-bottom: 20px;

	.col-sm-12 {
		.list-group {
			margin-bottom: 0px;
		}
	}
}

.nav-pills>li {
	width: 49.6%;
	text-align: center;
    border-radius: 0px;
    background-color: #E0E0E0;
    margin: 0px;
}

.nav-tabs>li>a {
    border: 1px solid #ccc;
    border-bottom-color: transparent;
    background-color: #e0e0e0;
    width: 95px;
    text-align: center;
}
